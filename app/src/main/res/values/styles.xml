<resources xmlns:android="http://schemas.android.com/tools">

    <style name="App.IconButton" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">@dimen/padding_all_large</item>
    </style>

    <style name="App.Translation.BookmarkButton" parent="App.IconButton">
    </style>

    <style name="App.Translation.LanguageSpinner" parent="AppTheme">
        <item name="android:maxWidth">@dimen/width_translation_language_spinner_min</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="App.Translation.DetectedLanguage.Layout" parent="TextAppearance.AppCompat.Widget.Button.Borderless.Colored">
        <item name="android:background">@color/color_all_background_light_gray</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="App.Translation.DetectedLanguage.Text" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/color_all_text_secondary</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/textsize_translation_detected_language_text</item>
        <item name="android:paddingStart">@dimen/padding_all_large</item>
        <item name="android:paddingEnd">@dimen/padding_all_small</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="App.Translation.OfflineBanner.TextHead" parent="TextAppearance.AppCompat.Body2">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_all_text_disabled</item>
    </style>

    <style name="App.Translation.OfflineBanner.TextSubhead" parent="TextAppearance.AppCompat.Body1">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_translation_offline_banner_text</item>
        <item name="android:textColor">@color/color_all_text_disabled</item>
    </style>

    <style name="App.History.Search.Layout" parent="AppTheme">
        <item name="android:padding">0dp</item>
        <item name="android:background">@color/color_all_background_light</item>
    </style>

    <style name="App.History.Search.TextField" parent="AppTheme.Transparent">
        <item name="android:textColor">@color/color_all_text_secondary</item>
        <item name="android:textSize">@dimen/textsize_history_search_field</item>
        <item name="android:paddingEnd">@dimen/size_all_button_icon</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textFilter</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

    <style name="App.History.Search.ButtonClear" parent="App.IconButton">
    </style>

    <style name="App.History.List.ItemLayout" parent="App.IconButton">
        <item name="android:paddingStart">@dimen/padding_all_large</item>
        <item name="android:paddingEnd">@dimen/padding_all_large</item>
        <item name="background">?selectableItemBackground</item>
    </style>


    <style name="App.History.List.BookmarkButton" parent="App.IconButton">
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>


    <style name="App.History.List.TextPrimary" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/color_all_text_primary</item>
        <item name="android:textSize">@dimen/textsize_all_list_item_primary</item>
        <item name="android:paddingBottom">@dimen/padding_all_text</item>
    </style>

    <style name="App.History.List.TextSecondary" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/color_all_text_secondary</item>
        <item name="android:textSize">@dimen/textsize_all_list_item_secondary</item>
    </style>

</resources>
