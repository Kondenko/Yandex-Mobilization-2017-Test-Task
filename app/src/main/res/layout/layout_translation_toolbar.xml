<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:elevation="@dimen/elevation_all_toolbar"
    android:background="?attr/colorPrimary"
    app:popupTheme="@style/AppTheme"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        >

        <Spinner
            android:id="@+id/spinner_translation_lang_from"
                        android:layout_height="wrap_content"
            android:layout_width="@dimen/width_translation_language_spinner_min"
            android:maxWidth="@dimen/width_translation_language_spinner_min"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/button_translation_switch_language"
            app:layout_constraintTop_toTopOf="parent"
            />

        <Spinner
            android:id="@+id/spinner_translation_lang_to"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/width_translation_language_spinner_min"
            android:layout_width="@dimen/width_translation_language_spinner_min"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/button_translation_switch_language"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:id="@+id/button_translation_switch_language"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="?selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/spinner_translation_lang_from"
            app:layout_constraintRight_toLeftOf="@+id/spinner_translation_lang_to"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_switch_language_black_24dp"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="vertical"
            />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.Toolbar>