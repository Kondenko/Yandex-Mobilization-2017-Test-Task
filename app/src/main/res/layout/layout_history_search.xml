<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="@dimen/height_history_search_field"
             android:elevation="2dp"
             android:orientation="horizontal"
             style="@style/App.History.Search.Layout"
    >

    <EditText
        android:id="@+id/editText"
        style="@style/App.History.Search.TextField"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start|center_vertical"
        tools:text="Discombobulation"
        />

    <ImageButton
        style="@style/App.IconButton"
        android:layout_width="@dimen/size_all_button_icon"
        android:layout_height="@dimen/size_all_button_icon"
        app:srcCompat="@drawable/ic_clear_text_black_24dp"
        android:layout_gravity="end|center_vertical"
        />

</FrameLayout>